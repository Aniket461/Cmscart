<%- include('../_layouts/adminheader') %>


<h2 class="page-title">Add a page</h2>
<a href="/admin" class="btn btn-primary">Back to all pages</a>
<br><br>


<form method="post" action="/admin/add-page">

	<div class="form-group">

	<label for=""><b>Title</b></label>
	<input type="text" name="title" class="form-control" value="<%= title %>" placeholder="title">

	</div>


	<div class="form-group">

	<label for=""><b>Slug</b></label>
	<input type="text" name="slug" class="form-control" value="<%= slug %>" placeholder="slug">

	</div>


	<div class="form-group">

	<label for=""><b>Content</b></label>
	<textarea id="ta" name="content" class="form-control" cols="30" rows="10" placeholder="content"></textarea>
	</div>

<button class="btn btn-outline-success">Submit</button>


</form>



<%- include('../_layouts/adminfooter') %>
